        <fields>
            <name>DT_Config_Text</name>
            <fieldText>&lt;p&gt;&lt;span style=&quot;font-size: 16px;&quot;&gt;Hi, thanks for using Quicker Quotes!&lt;/span&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;font-size: 16px;&quot;&gt;To get started, please set the config settings that will be used for your future quotes.&lt;/span&gt;&lt;/p&gt;</fieldText>
            <fieldType>DisplayText</fieldType>
        </fields>
        <fields>
            <name>S_Quicker_Quotes_Config_Section1</name>
            <fieldType>RegionContainer</fieldType>
            <fields>
                <name>S_Quicker_Quotes_Config_Section1_Column1</name>
                <fieldType>Region</fieldType>
                <fields>
                    <name>DT_Stage_Text</name>
                    <fieldText>&lt;p&gt;&lt;span style=&quot;color: rgb(68, 68, 68); background-color: rgb(255, 255, 255);&quot;&gt;Choose the stage that the Quick Quotes opportunity should be created in.  This would usually be one that represents the quote or proposal presented stage.&lt;/span&gt;&lt;/p&gt;</fieldText>
                    <fieldType>DisplayText</fieldType>
                </fields>
                <fields>
                    <name>PL_Opportunity_Stage</name>
                    <choiceReferences>PC_OpportunityStage</choiceReferences>
                    <dataType>String</dataType>
                    <fieldText>Opportunity Stage</fieldText>
                    <fieldType>DropdownBox</fieldType>
                    <isRequired>true</isRequired>
                </fields>
                <fields>
                    <name>DT_Expiry</name>
                    <fieldText>&lt;p&gt;&lt;span style=&quot;color: rgb(68, 68, 68); background-color: rgb(255, 255, 255);&quot;&gt;Choose how long the quotes should be valid for by default.&lt;/span&gt;&lt;/p&gt;</fieldText>
                    <fieldType>DisplayText</fieldType>
                </fields>
                <fields>
                    <name>IN_Validity</name>
                    <dataType>Number</dataType>
                    <defaultValue>
                        <numberValue>14.0</numberValue>
                    </defaultValue>
                    <fieldText>Validity (Days)</fieldText>
                    <fieldType>InputField</fieldType>
                    <isRequired>true</isRequired>
                    <scale>0</scale>
                </fields>
                <inputParameters>
                    <name>width</name>
